{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist"
  },
  "exclude": [
    "__fixtures__",
    "__tests__",
    "coverage",
    "dist",
    "node_modules",
    "template",
    "requirements"
  ],
  "include": [
    "create-context/src",
    "deploy-preview/src",
    "teardown-preview/src",
    "verify-up/src",
    "shared/src"
  ]
}
