{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>eidp/renovate-config"],
  "postUpgradeTasks": {
    "commands": [
      "install-tool node",
      "install-tool pnpm",
      "pnpm install --lockfile-only",
      "pnpm build"
    ],
    "fileFilters": ["**/dist/**"],
    "executionMode": "branch"
  }
}
