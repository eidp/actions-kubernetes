{
  "name": "actions-kubernetes",
  "version": "1.0.0",
  "description": "Kubernetes specific GitHub Actions",
  "private": true,
  "exports": {
    ".": "./create-context/dist/index.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "local-action": "npx @github/local-action ./create-context create-context/src/main.ts .env",
    "package": "ncc build create-context/src/main.ts -o create-context/dist --source-map --license licenses.txt && ncc build deploy-preview/src/main.ts -o deploy-preview/dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eidp/actions-kubernetes"
  },
  "keywords": [
    "github",
    "actions",
    "kubernetes"
  ],
  "author": "EIDP",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@kubernetes/client-node": "^1.4.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@github/local-action": "^6.0.0",
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.32.1",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^15.13.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "ts-jest": "^29.4.4",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.9.3"
  }
}
