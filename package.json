{
  "name": "actions-kubernetes",
  "version": "1.0.0",
  "type": "module",
  "description": "Kubernetes specific GitHub Actions",
  "private": true,
  "packageManager": "pnpm@10.21.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "bundle": "pnpm format:write && pnpm build",
    "format:write": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "all": "pnpm format:write && pnpm lint && pnpm run test:ci && pnpm build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eidp/actions-kubernetes"
  },
  "keywords": [
    "github",
    "actions",
    "kubernetes"
  ],
  "author": "EIDP",
  "license": "Apache-2.0",
  "devDependencies": {
    "@eslint/compat": "1.4.1",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.39.1",
    "@github/local-action": "6.0.2",
    "@types/node": "24.10.0",
    "@typescript-eslint/eslint-plugin": "8.46.4",
    "@typescript-eslint/parser": "8.46.4",
    "@vercel/ncc": "0.38.4",
    "@vitest/coverage-v8": "4.0.8",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.4",
    "@vitest/eslint-plugin": "1.4.2",
    "globals": "16.5.0",
    "prettier": "3.6.2",
    "prettier-eslint": "16.4.2",
    "typescript": "5.9.3",
    "vitest": "4.0.8"
  }
}
